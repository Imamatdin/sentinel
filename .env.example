# === Application ===
APP_ENV=development
DEBUG=true
LOG_LEVEL=DEBUG

# === LLM Providers ===
ANTHROPIC_API_KEY=sk-ant-...
CEREBRAS_API_KEY=csk-...
CEREBRAS_BASE_URL=https://api.cerebras.ai/v1
OPENAI_API_KEY=

# === Model Configuration (Cerebras) ===
PRIMARY_MODEL=zai-glm-4.7
FALLBACK_MODEL=gpt-oss-120b
ROUTER_MODEL=llama3.1-8b

# === Generation Settings ===
DEFAULT_TEMPERATURE=0.7
DEFAULT_MAX_TOKENS=4096
TOOL_CALL_TIMEOUT=30
MAX_TOOL_ITERATIONS=10

# === Neo4j ===
NEO4J_URI=bolt://localhost:7687
NEO4J_USER=neo4j
NEO4J_PASSWORD=sentinel_password

# === Temporal ===
TEMPORAL_HOST=localhost:7233
TEMPORAL_NAMESPACE=default
TEMPORAL_TASK_QUEUE=sentinel-tasks

# === PostgreSQL ===
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_USER=sentinel
POSTGRES_PASSWORD=sentinel_password
POSTGRES_DB=sentinel

# === OWASP ZAP ===
ZAP_API_URL=http://localhost:8090
ZAP_PROXY_URL=http://localhost:8080

# === Target ===
DEFAULT_TARGET_URL=http://localhost:3000

# === Engagement Scope ===
MAX_REQUESTS_PER_SECOND=10
MAX_SCAN_DURATION_MINUTES=120
REQUIRE_EXPLICIT_AUTHORIZATION=true
